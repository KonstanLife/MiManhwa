<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="5dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/CardBackground"
        android:padding="10dp">


            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/photo_user_img"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:scaleType="centerCrop"
                style="@style/ScreenBackground"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_person"
                app:shapeAppearanceOverlay="@style/style_circle_image" />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_toEndOf="@+id/photo_user_img"
            android:layout_marginStart="20dp">

        <TextView
            android:id="@+id/user_name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre usuario"
            android:textSize="19sp"
            android:maxLines="1"
            style="@style/TextColorTwo"/>

        <TextView
            android:id="@+id/user_mail_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Correo usuario"
            android:textSize="14sp"
            android:maxLines="4"
            android:ellipsize="end"
            android:layout_below="@id/user_name_tv"
            style="@style/TextColorTwo"/>

        <TextView
            android:id="@+id/user_state_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estado: Bloqueado"
            android:paddingEnd="16dp"
            android:maxLines="1"
            android:textSize="14sp"
            android:layout_alignParentBottom="true"
            style="@style/TextColorTwo"/>

        <TextView
            android:id="@+id/user_type_tv"
            style="@style/TextColorTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:maxLines="1"
            android:layout_marginEnd="10dp"
            android:text="Tipo usuario"
            android:textSize="14sp" />

        <ImageButton
            android:id="@+id/user_more_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:padding="5dp"
            android:src="@drawable/ic_more"
            android:layout_alignParentEnd="true"/>

        </RelativeLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>