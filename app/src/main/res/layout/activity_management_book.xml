<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/ScreenBackground"
    tools:context=".Activities.ManagementActivity.ManagementBookActivity">

    <include
        layout="@layout/toolbar_back"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/management_book_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/row_management_book"
        android:layout_below="@+id/toolbar_back"
        android:layout_margin="5dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:layout_above="@+id/bottomL1"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_book_float_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_add_white"
        app:tint="@color/white"
        app:fabCustomSize="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="20dp"
        app:backgroundTint="@color/orange"/>

</RelativeLayout>