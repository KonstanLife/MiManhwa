<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="5dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/CardBackground"
       >

        <RelativeLayout
            android:id="@+id/management_book_frontpage"
            android:layout_width="100dp"
            android:layout_height="140dp"
            android:layout_marginEnd="10dp">

            <ImageView
                android:id="@+id/management_book_frontpage_ImgView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </RelativeLayout>

        <TextView
            android:id="@+id/management_book_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Titulo de lectura"
            android:layout_marginTop="5dp"
            android:layout_toStartOf="@+id/management_book_more_btn"
            android:layout_toEndOf="@+id/management_book_frontpage"
            android:maxLines="1"
            android:textSize="20sp"
            style="@style/TextColorTwo"/>

        <TextView
            android:id="@+id/management_book_description_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Descripcion de lectura"
            android:layout_marginEnd="15dp"
            android:layout_toEndOf="@+id/management_book_frontpage"
            android:maxLines="4"
            android:ellipsize="end"
            android:layout_below="@id/management_book_title_tv"
            android:textSize="13sp"
            style="@style/TextColorTwo"/>

        <TextView
            android:id="@+id/management_book_genre_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Genero"
            android:layout_alignParentEnd="true"
            android:maxLines="1"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="15dp"
            android:textSize="13sp"
            android:paddingBottom="10dp"
            style="@style/TextColorTwo" />

        <ImageButton
            android:id="@+id/management_book_more_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:padding="5dp"
            android:src="@drawable/ic_more"
            android:layout_alignParentEnd="true"/>


    </RelativeLayout>

</androidx.cardview.widget.CardView>