<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="5dp"
    app:cardElevation="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/CardBackground"
        >

        <RelativeLayout
            android:id="@+id/favoriteBookFrontpage"
            android:layout_width="100dp"
            android:layout_height="140dp"
            android:layout_marginEnd="10dp">

            <ImageView
                android:id="@+id/favoriteBookFrontpageImgView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </RelativeLayout>

        <TextView
            android:id="@+id/favoriteBookTitleTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Titulo de lectura"
            android:layout_marginTop="5dp"
            android:layout_toStartOf="@+id/favorite_delete_btn"
            android:layout_toEndOf="@+id/favoriteBookFrontpage"
            android:maxLines="1"
            android:textSize="20sp"
            style="@style/TextColorTwo"/>

        <TextView
            android:id="@+id/favoriteBookNumChaptersTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Ultimo capitulo 10"
            android:layout_marginEnd="15dp"
            android:layout_toEndOf="@+id/favoriteBookFrontpage"
            android:maxLines="4"
            android:ellipsize="end"
            android:layout_below="@id/favoriteBookTitleTv"
            android:textSize="13sp"
            style="@style/TextColorTwo"/>

        <TextView
            android:id="@+id/favoriteBookCurrentChapterTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Seguir leyendo"
            android:layout_marginEnd="15dp"
            android:layout_toEndOf="@+id/favoriteBookFrontpage"
            android:maxLines="4"
            android:ellipsize="end"
            android:layout_below="@id/favoriteBookNumChaptersTv"
            android:textSize="13sp"
            style="@style/TextColorTwo"/>

        <ImageButton
            android:id="@+id/favorite_delete_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:padding="5dp"
            android:src="@drawable/ic_remove"
            android:layout_alignParentEnd="true"/>


    </RelativeLayout>

</androidx.cardview.widget.CardView>