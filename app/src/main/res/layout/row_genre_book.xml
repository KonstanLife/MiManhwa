<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="5dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/CardBackground"
        >

        <RelativeLayout
            android:id="@+id/genre_book_frontpage"
            android:layout_width="100dp"
            android:layout_height="140dp"
            android:layout_marginEnd="10dp">

            <ImageView
                android:id="@+id/genre_book_frontpage_ImgView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </RelativeLayout>

        <TextView
            android:id="@+id/genre_book_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Titulo de lectura"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/genre_book_frontpage"
            android:maxLines="1"
            android:textSize="20sp"
            style="@style/TextColorTwo"/>

        <TextView
            android:id="@+id/genre_book_description_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Descripcion de lectura"
            android:layout_marginEnd="15dp"
            android:layout_toEndOf="@+id/genre_book_frontpage"
            android:maxLines="5"
            android:ellipsize="end"
            android:layout_below="@id/genre_book_title_tv"
            android:textSize="13sp"
            style="@style/TextColorTwo"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>